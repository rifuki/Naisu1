CCTP_DOMAIN_BASE=5

# ─── Feature Flags ─────────────────────────────────────────────────────────────
# Enable mock solvers for demo (true = simulated bidding)
ENABLE_MOCK_SOLVERS=true
MOCK_DELAY_MS=1000

# ─── Solver Configuration ──────────────────────────────────────────────────────
# Solver wallet private keys (for demo/testing only)
SCALLOP_SOLVER_PRIVATE_KEY=
NAVI_SOLVER_PRIVATE_KEY=

# ─── AI/Chat (Optional) ────────────────────────────────────────────────────────
OPENAI_API_KEY=

