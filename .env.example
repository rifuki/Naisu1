# ─── Server Configuration ──────────────────────────────────────────────────────
PORT=8080
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
LOG_LEVEL=debug

# ─── Sui Network (Testnet) ─────────────────────────────────────────────────────
SUI_RPC=https://fullnode.testnet.sui.io:443
SUI_NETWORK=testnet

# Move Package ID (update after deployment)
NAISU_PACKAGE_ID=0xa3a26135f436323ea0fe00330fbdcd188f2c07bf33a5ee4c49aa736cea88a71f

# Protocol Adapters
SCALLOP_PACKAGE_ID=0x...
NAVI_PACKAGE_ID=0x...

# ─── EVM Network (Base Sepolia) - Optional for Cross-Chain ─────────────────────
BASE_SEPOLIA_RPC=https://sepolia.base.org
BASE_SEPOLIA_CHAIN_ID=84532

# ─── Bridge (Wormhole CCTP) - Optional ─────────────────────────────────────────
# Circle CCTP for Sui <-> Base bridging
CCTP_TOKEN_MESSENGER_MINTER=0x31cc14d80c175ae39777c0238f20594c6d4869cfab199f40b69f3319956b8beb
CCTP_STATE_OBJECT=0x5252abd1137094ed1db3e0d75bc36abcd287aee4bc310f8e047727ef5682e7c2
CCTP_MESSAGE_TRANSMITTER=0x98234bd0fa9ac12cc0a20a144a22e36d6a32f7e0a97baaeaf9c76cdc6d122d2e
